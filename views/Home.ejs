<!DOCTYPE html>
<html lang="en" ng-app="CertApp">
<head>
    <title>MEAN Stack!</title>
    <% include partials/Head.ejs %>


</head>

<body>

    <div id="wrapper">


        <!-- Page Content -->
        <div id="page-content-wrapper" >
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12" ng-controller="Naren">
                      <!-- {{5+5}} -->
                      <h1 class="page-header text text-center">MEAN Stack app Using Angular js and Node.js</h1>
                       <br/><br/>

                       <% if( typeof(errorMessage)=='undefined')  { %>
                       <div class="alert alert-danger alert-dismissible fade in">
                         <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                         <strong>Warning!</strong> <%=errorMessage%>.
                       </div>
                       <%} else { %>

                       <div class="alert alert-success alert-dismissible fade in">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong>Success!</strong> <%=successMessage%>.
                         </div>

                         <% } %>
                       <table class="table table-striped well">
                       <thead>
                         <tr>
                           <th>Name</th>
                           <th>Email</th>
                           <th>Date Of Birth</th>
                           <th>Department</th>
                           <th>Gender</th>
                           <th>Age</th>
                           </tr>
                           </thead>

                           <tr>
                             <th><input type="text" class="form-control" ng-model="employee.name" placeholder="full name"></th>
                             <th><input type="email" class="form-control" ng-model="employee.email" placeholder="xyz@gmail.com"></th>
                             <th><input type="date" class="form-control"  ng-model="employee.date_of_birth" value="2014-02-09"></th>
                             <th><input type="text" class="form-control" ng-model="employee.department" placeholder="department"></th>
                             <th><input type="text" class="form-control" ng-model="employee.gender" placeholder="gender"></th>
                             <th><input type="number" class="form-control" ng-model="employee.age" placeholder="age" disabled></th>
                             <th><button class="btn btn-success" type="submit" ng-click="addEmployee()">AddEmployee</button></th>
                             <th><button class="btn btn-success" type="submit" ng-click="updateEmployee()">UpdateEmployee</button></th>
                             <th><button class="btn btn-warning" type="reset" ng-click="clear(employee._id)">Clear</button></th>
                             </tr>
    <tbody ng-repeat="employee in employees">

      <tr>
        <td>{{employee.name}}</td>
        <td>{{employee.email}}</td>
        <td>{{employee.date_of_birth}}</td>
        <td>{{employee.department}}</td>
        <td>{{employee.gender}}</td>
        <td>{{employee.age}}</td>
        <td><button class="btn btn-danger" ng-click="removeEmployee(employee._id)">Delete</button></td>
        <td><button class="btn btn-success" ng-click="editEmployee(employee._id)">Edit</button></td>
        <td></td>
      </tr>
    </tbody>
  </table>
<br/><br/>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% include partials/Footer.ejs %>




</body>

</html>
